enum MentorshipBookingStatus {
  SCHEDULED
  COMPLETED
  CANCELLED
  MENTOR_CANCELLED

  @@schema("public")
}

model MentorshipBooking {
  id           String                  @id @default(uuid())
  userId       String
  calEventId   String
  calBookingId String                  @unique
  scheduledAt  DateTime
  status       MentorshipBookingStatus @default(SCHEDULED)
  bookingUrl   String? // Cal.com booking management URL
  meetingUrl   String?
  createdAt    DateTime                @default(now())
  updatedAt    DateTime                @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([scheduledAt])
  @@schema("public")
}
