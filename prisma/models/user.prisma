enum MentorshipStatus {
  ACTIVE
  INACTIVE

  @@schema("public")
}

enum MentorshipType {
  MONTHLY
  QUARTERLY
  SEMIANNUAL

  @@schema("public")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  credits              Int     @default(0)
  stripeCustomerId     String? @unique
  stripeSubscriptionId String? @unique

  // Mentorship
  mentorshipStatus         MentorshipStatus @default(INACTIVE)
  mentorshipType           MentorshipType?  @default(MONTHLY)
  mentorshipStartDate      DateTime?
  mentorshipEndDate        DateTime?
  weeklyMentorshipSessions Int              @default(1)
  remainingWeeklySessions  Int              @default(1)
  weeklySessionsResetAt    DateTime?

  tasks                        Task[]
  projects                     Project[]
  comments                     Comment[]
  prReviews                    PullRequestReview[]
  createdPlanningPokerSessions PlanningPokerSession[] @relation("PlanningPokerSessionCreator")
  planningPokerVotes           PlanningPokerVote[]
  notifications                Notification[]
  mentorshipBookings           MentorshipBooking[]

  @@schema("public")
}
